                                Converter={StaticResource dataHasBeenEntered}}"
                                              Value="true" />
                                <BindingCondition
                                Binding="{Binding Source={x:Reference pwd},
                                Path=Text.Length,
                                Converter={StaticResource dataHasBeenEntered}}"
                                Value="true" />
                            </MultiTrigger.Conditions>
                            <MultiTrigger.Setters>
                                <Setter Property="IsEnabled" Value="True" />
                            </MultiTrigger.Setters>
                        </MultiTrigger>
                    </Button.Triggers>
                </Button>
-->

